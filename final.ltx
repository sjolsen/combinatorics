\problem{1}{Let $S = \{1, 2, 3, 4, 5, 6\}$.}
\subproblem{a}{How many $3$-permutations of $S$ are there?}
The number of $3$-permutations of a $6$-set is given by
\begin{align*}
  P(6, 3) &= 6 \cdot 5 \cdot 4\\
          &= \answer{120}.
\end{align*}

\subproblem{b}{How many $3$-combinations of $S$ are there?}
The number of $3$-combinations of a $6$-set is given by
\begin{align*}
  {6 \choose 3} &= \frac{P(6, 3)}{3!}\\
                &= \frac{120}{6}\\
                &= \answer{20}.
\end{align*}

\subproblem{c}{How many cyclic $3$-permutations of $S$ are there?}
The number of cyclic $3$-permutations of a $6$-set is given by
\begin{align*}
  \frac{P(6, 3)}{3} &= \frac{120}{3}\\
                    &= \answer{40}.
\end{align*}



